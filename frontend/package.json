{
  "name": "hello-forms-frontend",
  "version": "1.0.0",
  "description": "Angular frontend for the form builder application",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200",
    "build": "ng build --configuration production",
    "build:dev": "ng build --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "serve": "ng serve --port 4200 --proxy-config proxy.conf.json",
    "clean": "rm -rf dist node_modules",
    "generate:api": "orval --config ./orval.config.ts",
    "generate:api:watch": "orval --config ./orval.config.ts --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@faker-js/faker": "^9.9.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "msw": "^2.10.4",
    "openapi-types": "^12.1.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@orval/angular": "^7.10.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.7.0",
    "is-number": "^7.0.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "node-fetch-h2": "^2.3.1-0",
    "orval": "^7.10.0",
    "prettier": "^3.6.2",
    "typescript": "~5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
