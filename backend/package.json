{
  "name": "hello-forms-server",
  "version": "1.0.0",
  "description": "Backend API server for Hello Forms - Dynamic form builder and validation with OpenAPI support",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "forms",
    "validation",
    "openapi",
    "express",
    "sqlite",
    "json-schema",
    "dynamic-forms",
    "api"
  ],
  "author": "mkoertgen",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0",
    "pg": "^8.11.0",
    "oracledb": "^6.0.3",
    "mysql2": "^3.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!node_modules/**",
      "!data/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "*.js"
    ],
    "ext": "js,json",
    "ignore": [
      "data/*",
      "node_modules/*",
      "coverage/*",
      "__tests__/*"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": "3000"
    },
    "delay": "1000"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
